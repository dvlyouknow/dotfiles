[alias]
    diff-stash = "!f() { git stash show -p stash@{${1:-0}}; }; f"
    co = checkout
    cob = checkout -b
    ci = commit
    cam = commit -am
    br = branch
    # diff = dff --word-diff
    dc = diff --cached
    dlc = diff --cached HEAD^
    lt = describe --tags --abbrev=0
    la = "!git config -l | grep alias | cut -c 7-"
    undo = reset HEAD~1 --mixed
    tagcommit = rev-list -n 1
    l = log --oneline --graph --decorate -n 20
    lg = log -p
    ll = log --oneline --graph --decorate
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    po = !git push -u origin $(git branch --show-current)
    tracked = ls-tree -r @ --full-tree --name-only
    pb = !git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D

[branch]
    autoSetupMerge = always
    autoSetupRebase = always

[credential]
    helper = cache --timeout=3600

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[commit]
    gpgSign = true

[core]
    excludesfile=~/.vcsignore
{{- if not (lookPath "delta") }}
    pager = less -R
{{ end }}

{{ if lookPath "delta" -}}
[pager]
    diff = delta
    show = delta
    log = delta
    blame = delta
    reflog = delta

[interactive]
    diffFilter = delta --color-only

[delta "custom"]
    syntax-theme = Nord

[delta]
    features = custom
{{- end }}

[fetch]
    prune = true

[help]
    autocorrect = 1

[ui]
    color = true

[pull]
    ff = only
    rebase = merges

[push]
    default = simple
    followTags = true

[rebase]
    autoSquash = true
    autoStash = true

[rerere]
    enabled = true
    autoUpdate = true

[tag]
    gpgSign = true

[url "git@github.com:"]
    insteadOf = gh:
[url "git@github.com:powertoolsdev/"]
    insteadOf = pt:
[url "git@gitlab.com:"]
    insteadOf = gl:
[url "git@bitbucket.org:"]
    insteadOf = bb:
[url "git@github.com:"]
      insteadOf = https://github.com/

[user]
    name = {{ .fullname }}
    email = {{ .email }}

[init]
    defaultBranch = main
